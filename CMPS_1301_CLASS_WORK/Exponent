import java.util.Scanner;
public class Exponent
{
   public static void main(String[] args)
   {
      Scanner in = new Scanner(System.in);
      System.out.println("Enter an integer.");
      int num1 = in.nextInt();
      int numSquared = numSquared(num1);
      int numCubed = numCubed(num1 , numSquared);
      System.out.printf("%d squared is %d.%n%d cubed is %d." , num1 , numSquared ,num1 , numCubed);
   }
   
   public static int numSquared(int num1)
   {
      int numSquared = num1 * num1;
      numCubed(numSquared , num1);
      return numSquared;
   }
   
   public static int numCubed(int numSquared , int num1)
   {
      int numCubed = numSquared * num1;
      return numCubed;
   }
  
}