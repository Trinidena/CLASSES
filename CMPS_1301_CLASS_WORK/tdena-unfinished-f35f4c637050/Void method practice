import java.util.Scanner;

public class Gasoline
{

   public static void main(String[] args)
   {
   Scanner in = new Scanner(System.in);
   System.out.println("Enter the price of the barrel");
   int pricePerBarrel = in.nextInt();   
   pricePerGallon(pricePerBarrel);
   }
   
   public static void pricePerGallon(int pricePerBarrel)
   {
   int pricePerGallon1 = (pricePerBarrel/4);
   int pricePerGallon2 = (pricePerBarrel);
   System.out.printf("Price per gallon is between %d and %d." , pricePerGallon1 , pricePerGallon2);
   }
}


import java.util.Scanner;

public class FourMethod
{
   public static void main(String[] args)
   {
      Scanner in = new Scanner(System.in);
      twoIntegers();
   }
     
   public static void twoIntegers()
   {
      Scanner in = new Scanner(System.in);
      System.out.println("Enter an integer please.");
      int number1 = in.nextInt();
      System.out.println("Enter another integer please.");
      int number2 = in.nextInt();
      addNumbers(number1 , number2);
   }
   
   public static void addNumbers(int number1 , int number2)
   {
      int thirdNumber = number1 + number2;
      sumNumber(thirdNumber);
   }
   
   public static void sumNumber(int sum)
   {
      System.out.printf("The sum of the integers you entered are %d." , sum);
   }
}



import java.util.Scanner;
public class Name
{
   public static void main(String[] args)
   {
      Scanner in = new Scanner(System.in);
      System.out.println("Please enter your name.");
      String name = in.nextLine();
      System.out.println("Please enter a number.");
      double number = in.nextDouble();
      printNameAndNumber(name , number);
   }
   
   public static void printNameAndNumber(String name , double number)
   {
      System.out.printf("Hi %s. You entered the number %.0f." , name , number);
   }
}







